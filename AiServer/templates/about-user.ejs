    <section id="user-details">
      <div id="user-details-section">
        <div class="container">
          <div class="row">
            <div class="panel panel-info">
              <div class="panel-heading">
                <h4 class="panel-title">各项指标</h4>
              </div>
              <div class="panel-body">
                <form action="." class="form-horizontal col-xs-9 col-xs-offset-3" role="form" method="post" onsubmit="return false">
                  <div class="form-group">
                    <label class="col-sm-2 control-label">年龄</label>
                    <div class="col-sm-4">
                      <input type="text" class="form-control" id="Age" name="age">
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">性别</label>
                    <div class="col-sm-10">
                      <label class="radio-inline">
                        <input type="radio" name="sex" checked>女
                      </label>
                      <label class="radio-inline">
                        <input type="radio" name="sex">男
                      </label>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">胸部疼痛类型</label>
                    <div class="col-sm-10">
                      <label class="radio-inline">
                        <input type="radio" name="cp" checked>典型心绞痛
                      </label>
                      <label class="radio-inline">
                        <input type="radio" name="cp">非典型心绞痛
                      </label>
                      <label class="radio-inline">
                        <input type="radio" name="cp">非心绞痛
                      </label>
                      <label class="radio-inline">
                        <input type="radio" name="cp">无临床症状
                      </label>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">安静血压</label>
                    <div class="col-sm-4">
                      <input type="email" class="form-control" placeholder="xx-mmHg", name="tresbps">
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">血清类固醇</label>
                    <div class="col-sm-4">
                      <input type="text" class="form-control" placeholder="xx-mg/dl" name="chol">
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">空腹血糖</label>
                    <div class="col-sm-4">
                      <input type="text" class="form-control" name="fbs">
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">静息心电图结果</label>
                    <div class="col-sm-10">
                      <label class="radio-inline">
                        <input type="radio" name="restecg" checked>正常
                      </label>
                      <label class="radio-inline">
                        <input type="radio" name="restecg">拥有ST-T畸形波
                      </label>
                      <label class="radio-inline">
                        <input type="radio" name="restecg">显示可能或明确的左心室肥厚
                      </label>
                    </div>
                  </div>
                     <div class="form-group">
                    <label class="col-sm-2 control-label">最大心率</label>
                    <div class="col-sm-4">
                      <input type="text" class="form-control" name="thalach">
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">是否为运动诱发的心绞痛</label>
                    <div class="col-sm-10">
                      <label class="radio-inline">
                        <input type="radio" name="exang" checked>是
                      </label>
                      <label class="radio-inline">
                        <input type="radio" name="exang">否
                      </label>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">运动相对于休息引起的ST抑郁症</label>
                    <div class="col-sm-4">
                      <input type="text" class="form-control" placeholder="0.0-9.0" name="oldpeak">
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">峰值运动ST段的斜率</label>
                    <div class="col-sm-10">
                      <label class="radio-inline">
                        <input type="radio" name="slope" checked>上涨
                      </label>
                      <label class="radio-inline">
                        <input type="radio" name="slope">瓶
                      </label>
                      <label class="radio-inline">
                        <input type="radio" name="slope">下坡
                      </label>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">主要血管数量</label>
                    <div class="col-sm-4">
                      <input type="text" class="form-control" placeholder="0-3"name="ca">
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">thal</label>
                    <div class="col-sm-10">
                      <label class="radio-inline">
                        <input type="radio" name="thal" checked>正常
                      </label>
                      <label class="radio-inline">
                        <input type="radio" name="thal">固定缺陷
                      </label>
                      <label class="radio-inline">
                        <input type="radio" name="thal">可逆缺陷
                      </label>
                    </div>
                  </div>
                    <input type="hidden" name="type" value="1">
                  <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
{#                         <button type="submit" class="btn btn-primary">提交</button>#}
                      <a href="#" data-toggle="modal" data-target="#myModal-2" class="btn btn-primary" type="button">提交</a>
                    </div>
                  </div>              
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>


