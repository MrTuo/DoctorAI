{% extends 'base.ejs'%}
{% load staticfiles %}
{% block header %}
{% include "index-header.ejs" %}
 {% endblock %}
    <!-- main content start-->
    <!-- about-me-section start-->
    {% block section %}
      <div id="about-me-section">
        <div class="overlay"></div>
        <div class="container">
          <div class="row">
            <div class="col-md-offset-3 col-md-6 col-sm-12">
              <div class="row">
                <div class="col-xs-8 col-xs-offset-2 my-block">
                  <a href="#" data-toggle="modal" data-target="#myModal-1" class="btn btn-block my-btn" type="button">注册</a>
                </div>
                <div class="col-xs-8 col-xs-offset-2 my-block">
                  <a href="#" data-toggle="modal" data-target="#myModal-2" class="btn btn-block my-btn" type="button">登录</a>
                </div>
                  {% if er_msg %}
                  <div class="col-xs-8 col-xs-offset-2 my-block">
                  <p style="color: #edff00;font-size: 23px;">提示：{{ er_msg }}</p>
                </div>
                  {% endif %}
               </div> 
            </div>
          </div>
        </div>
      </div>
    {% endblock %}
    
    {% block window %}
    <div class="modal fade" id="myModal-1" tabindex="-1" 
       role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
              &times;
            </button>
            <h4 class="modal-title" id="myModalLabel">注册
              <span id="sign-result" class="text-success"></span>
            </h4>
            
          </div>
          <div class="modal-body">
            <div class="contaniner">
              <div class="row">
                <form action="." class="form-horizontal modal-form" role="form" id="regForm" method="post" onsubmit="return false">
                  <div class="form-group">
                    <label for="Email" class="col-sm-2 control-label">用户名</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="email" name="username" placeholder="请输入用户名" required/>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="Password" class="col-sm-2 control-label">密码</label>
                    <div class="col-sm-10">
                      <input type="password" class="form-control" id="Password" name="password" placeholder="请输入密码" required/>
                    </div>
                  </div>
                    <div class="form-group">
                    <label for="Password" class="col-sm-2 control-label">重复密码</label>
                    <div class="col-sm-10">
                      <input type="password" class="form-control" id="Password2" name="password2" placeholder="请重新输入密码" required/>
                    </div>
                  </div>
                        <input id="logType" type="hidden" name="type" value="">
                  <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">

                      <button type="submit" class="btn btn-primary col-md-offset-2 col-md-2" id="sign-up">注册</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>        
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
          </div>
        </div><!-- .modal-content end-->
      </div>
    </div><!-- .modal end -->
    <div class="modal fade" id="myModal-2" tabindex="-1"
       role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
              &times;
            </button>
            <h4 class="modal-title" id="myModalLabel">登录
              <span id="sign-result" class="text-success"></span>
            </h4>

          </div>
          <div class="modal-body">
            <div class="contaniner">
              <div class="row">
                <form action="." class="form-horizontal modal-form" role="form" id="logForm" method="post" onsubmit="return false">
                  <div class="form-group">
                    <label for="Email" class="col-sm-2 control-label">用户名</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control" id="email" name="username" placeholder="请输入用户名" required/>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="Password" class="col-sm-2 control-label">密码</label>
                    <div class="col-sm-10">
                      <input type="password" class="form-control" id="Password" name="password" placeholder="请输入密码" required/>
                    </div>
                  </div>
                        <input id="logType" type="hidden" name="type" value="">
                  <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                      <button type="submit" class="btn btn-primary col-md-offset-2 col-md-2" id="sign-in">登录</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
          </div>
        </div><!-- .modal-content end-->
      </div>
    </div><!-- .modal end -->
{% endblock %}

    <script type="text/javascript" src="{% static 'AiServer/js/jquery-2.1.4.min.js' %}"></script>
    <script type="text/javascript" src="{% static 'AiServer/js/bootstrap.min.js' %}"></script>
    <script type="text/javascript" src="{% static 'AiServer/js/index.js' %}"></script>
{% block js %}
    <script type="text/javascript">
        $('#sign-up').click(function() {
          $('#logType').val("0");
          document.getElementById("regForm").submit();
        });
        $('#sign-in').click(function() {
          $('#logType').val("1");
          document.getElementById("logForm").submit();
        });

    </script>
{% endblock %}
